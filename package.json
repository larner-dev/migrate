{
  "name": "@larner.dev/migrate",
  "description": "CLI for applying database migrations",
  "version": "1.8.6",
  "author": "Aaron Larner",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"vite build --watch\"",
    "build": "tsc --declaration && vite build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn build",
    "test": "vitest --run --dir ./src",
    "test-watch": "vitest --dir ./src",
    "test-coverage": "vitest run --dir ./src --coverage"
  },
  "devDependencies": {
    "@types/klaw": "3.0.7",
    "@types/node": "22.15.21",
    "@vitest/coverage-v8": "4.0.17",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "nodemon": "3.1.11",
    "rollup-plugin-node-externals": "8.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.17"
  },
  "dependencies": {
    "chalk": "5.6.2",
    "chokidar": "4.0.3",
    "commander": "14.0.2",
    "klaw": "4.1.0",
    "pg": "8.17.1",
    "sequelize": "6.37.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "bin": "./dist/cli.js",
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
}
